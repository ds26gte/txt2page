# last modified 2015-05-29
# ds26gte@yahoo.com

if test $# -eq 0
then echo error: no file argument provided; exit;
fi

if test $# -ne 1
then echo error: too many arguments provided; exit;
fi

f=$1

g=${f##*/}

g=${g%.*}

h=$g.txt.so

soelim $f > $h

if test "$(which nvim)"
then ex="nvim -e"
else ex=ex
fi

$ex -s $h -c "sil! ru txt2page_docx.vim" -c "sil! call Txt2docx()" -c x

pandoc -f \
markdown-line_blocks-raw_html-subscript-superscript+autolink_bare_uris \
$h \
-o $g.docx
